<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Page d'accueil du portail IT -->
    <template id="portal_my_it_home" name="IT Services Portal">
        <t t-call="portal.portal_layout">
            <div class="o_portal_docs">
                <h1 class="mt-4">Gestion de parc informatique</h1>
                <div class="row mt32 o_portal_search_panel">
                    <div class="col-lg-4">
                        <a href="/my/it/contracts">
                            <div class="card mb-4">
                                <div class="card-body text-center">
                                    <h3 class="card-title">
                                        <span t-esc="contract_count" t-options="{'widget': 'statinfo'}"/>
                                    </h3>
                                    <p class="card-text">Contrats</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-4">
                        <a href="/my/it/equipment">
                            <div class="card mb-4">
                                <div class="card-body text-center">
                                    <h3 class="card-title">
                                        <span t-esc="equipment_count" t-options="{'widget': 'statinfo'}"/>
                                    </h3>
                                    <p class="card-text">Équipements</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Liste des contrats -->
    <template id="portal_my_contracts" name="My Contracts">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Contrats</t>
            </t>
            
            <t t-if="contracts">
                <table class="table table-striped table-hover o_portal_my_doc_table">
                    <thead>
                        <tr class="active">
                            <th>Référence</th>
                            <th>Nom</th>
                            <th>Date de début</th>
                            <th>Date de fin</th>
                            <th>État</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="contracts" t-as="contract">
                            <tr>
                                <td>
                                    <a t-attf-href="/my/it/contract/#{contract.id}">
                                        <t t-esc="contract.reference"/>
                                    </a>
                                </td>
                                <td><t t-esc="contract.name"/></td>
                                <td><t t-esc="contract.date_start" t-options='{"widget": "date"}'/></td>
                                <td><t t-esc="contract.date_end" t-options='{"widget": "date"}'/></td>
                                <td>
                                    <t t-if="contract.state == 'waiting_approval'">
                                        <span class="badge badge-warning">En attente d'acceptation</span>
                                    </t>
                                    <t t-elif="contract.state == 'active'">
                                        <span class="badge badge-success">Actif</span>
                                    </t>
                                    <t t-elif="contract.state == 'to_renew'">
                                        <span class="badge badge-info">À renouveler</span>
                                    </t>
                                    <t t-else="">
                                        <span class="badge badge-secondary" t-esc="contract.state"/>
                                    </t>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                <div t-if="pager" class="o_portal_pager text-center">
                    <t t-call="portal.pager"/>
                </div>
            </t>
            <t t-else="">
                <div class="alert alert-info">
                    <p>Il n'y a pas de contrats à afficher.</p>
                </div>
            </t>
        </t>
    </template>

    <!-- Détail d'un contrat -->
    <template id="portal_my_contract_detail" name="Contract Details">
        <t t-call="portal.portal_layout">
            <t t-set="o_portal_fullwidth_alert" groups="sale.group_warning_sale">
                <t t-if="contract.state == 'waiting_approval'">
                    <div class="alert alert-warning" role="alert">
                        <p>Ce contrat est en attente de votre acceptation.</p>
                        <a t-att-href="'/my/it/contract/%s/accept' % contract.id" class="btn btn-primary">
                            <i class="fa fa-check"/> Accepter ce contrat
                        </a>
                    </div>
                </t>
            </t>

            <div id="optional_placeholder"></div>
            <div class="container">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-lg-6">
                                <h3>
                                    <span t-esc="contract.name"/>
                                </h3>
                            </div>
                            <div class="col-lg-6 text-right">
                                <span t-field="contract.reference" class="font-weight-bold"/>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col-6">
                                <strong>Date de début:</strong> <span t-field="contract.date_start" t-options='{"widget": "date"}'/>
                            </div>
                            <div class="col-6">
                                <strong>Date de fin:</strong> <span t-field="contract.date_end" t-options='{"widget": "date"}'/>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col-6">
                                <strong>Type de contrat:</strong> <span t-field="contract.type_id.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Montant:</strong> <span t-field="contract.price" t-options='{"widget": "monetary", "display_currency": contract.currency_id}'/>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col-12">
                                <strong>Description:</strong>
                                <div class="mt-2" t-field="contract.description"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <strong>Termes et conditions:</strong>
                                <div class="mt-2" t-field="contract.terms"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>